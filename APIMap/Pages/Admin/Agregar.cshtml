@page
@model UbicaTec.Pages.Admin.AgregarModel
@{
}
<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="~/Css/StylesAdmin.css" />
	<title>Agregar</title>
</head>
<body class="grid-container">
	<header class="header">
		<div class="iconTitle">
			<a><img class="icon" src="~/Images/Diseños/Logo.png" alt="icon" /></a>
			<h1>Ubica-Tec</h1>
		</div>
		<a id="Salir"><img class="iconMenu" src="~/Images/Diseños/CerrarSesion.png" alt="filter icon" /></a>
	</header>

	<main class="main">
		<div class="Lista-Container3">
			<div class="title"><label>Agregar</label></div>

			<div class="form-container">
				<div class="form-group">
					<label for="nombre">Nombre:</label>
					<input type="text" id="nombre" name="nombre" />
				</div>

				<div class="form-group">
					<label for="area">Área:</label>
					<select id="area" name="area">
						<option value="edificios">Edificios</option>
						<option value="laboratorio">Laboratorio</option>
						<option value="departamento">Departamento</option>
					</select>
				</div>

				<div class="form-group">
					<label for="descripcion">Descripción:</label>
					<textarea id="descripcion" name="descripcion"></textarea>
				</div>

				<div class="form-group">
					<label for="imagen">Imagen:</label>
					<img id="imagen-preview" src="~/Images/Diseños/SinImagen.png" alt="Imagen predefinida" />
					<input type="file" id="imagen" name="imagen" accept="image/*" />
				</div>
			</div>
		</div>

		<div class="button-group">
			<a id="aceptar" class="btn aceptar"><img src="~/Images/Diseños/Aceptar.png" alt="Aceptar Icono" /> </a>
			<a id="cancelar" class="btn cancelar"><img src="~/Images/Diseños/Cancelar.png" alt="Cancelar Icono" /> </a>
		</div>

	</main>

	<nav class="footer">
		<div class="nav-item">
			<a id="Inicio">
				<img src="~/Images/Diseños/casa.png" alt="home icon" />
				<h3>Inicio</h3>
			</a>
		</div>

	</nav>

	<script>
		//NAVEGACION
		let Home = document.getElementById('Inicio').addEventListener("click", function () {
			window.location.replace("Index");
		});
		let acept= document.getElementById('aceptar').addEventListener("click", function(){
			window.location.replace("Index");
		});
		let cancel= document.getElementById('cancelar').addEventListener("click", function(){
			window.location.replace("Index");
		});
					document.getElementById('imagen').addEventListener('change', function(event) {
		  const file = event.target.files[0];
		  if (file) {
			const reader = new FileReader();
			reader.onload = function(e) {
			  document.getElementById('imagen-preview').src = e.target.result;
			};
			reader.readAsDataURL(file);
		  }
		});
			let Salir =document.getElementById('Salir').addEventListener("click", function(){
			window.location.replace("/Index");
		});
			// Cargar áreas disponibles
		async function cargarAreas() {
			console.log("Cargando áreas disponibles...");
			try {
						const response = await fetch('https://apimap.websitos256.com/areas'); // Cambiar endpoint según la API
				console.log("Respuesta de la API recibida para áreas.");

				if (!response.ok) {
					throw new Error(`Error al obtener áreas: ${response.statusText}`);
				}

				const areas = await response.json();
				console.log("Áreas obtenidas:", areas);

				const areaSelect = document.getElementById('area');
				// Limpiar opciones actuales
				areaSelect.innerHTML = '';
				console.log("Opciones anteriores eliminadas.");

				// Agregar nuevas opciones
				areas.forEach(area => {
					const option = document.createElement('option');
					option.value = area.id; // Asume que la API devuelve un "id" para el área
					option.textContent = area.nombre; // Asume que la API devuelve un "nombre" para el área
					areaSelect.appendChild(option);
				});
				console.log("Nuevas opciones añadidas al select.");
			} catch (error) {
				console.error('Error al cargar áreas:', error);
			}
		}

		// Agregar nuevo elemento
		async function agregarElemento() {
			console.log("Iniciando proceso para agregar un nuevo elemento...");
			try {
				const nombre = document.getElementById('nombre').value;
				const area = document.getElementById('area').value;
				const descripcion = document.getElementById('descripcion').value;
				const imagen = document.getElementById('imagen').files[0];

				console.log("Datos capturados del formulario:", { nombre, area, descripcion, imagen });

				// Crear formData para enviar datos, incluyendo la imagen
				const formData = new FormData();
				formData.append('nombre', nombre);
				formData.append('area', area);
				formData.append('descripcion', descripcion);
				if (imagen) {
					formData.append('imagen', imagen);
					console.log("Imagen añadida al FormData.");
				}

				console.log("Enviando solicitud a la API para agregar el elemento...");
						const response = await fetch('https://apimap.websitos256.com/elementos', { // Cambiar endpoint según la API
					method: 'POST',
					body: formData
				});
				console.log("Respuesta recibida de la API.");

				if (!response.ok) {
					throw new Error(`Error al agregar elemento: ${response.statusText}`);
				}

				console.log("Elemento agregado exitosamente.");
				alert('Elemento agregado exitosamente.');
				window.location.replace("Index");
			} catch (error) {
				console.error('Error al agregar elemento:', error);
				alert('Hubo un error al agregar el elemento.');
			}
		}

		// Llamar a cargarAreas al cargar la página
		window.addEventListener('DOMContentLoaded', () => {
			console.log("Página cargada. Llamando a cargarAreas...");
			cargarAreas();
		});
	</script>
	<script src="https://kit.fontawesome.com/81581fb069.js" crossorigin="anonymous"></script>
</body>
</html>

